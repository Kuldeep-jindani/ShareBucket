<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logo_share"
                android:text="Share"
                android:textSize="50dp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/logo_bucket"
                android:text="Bucket"
                android:textSize="50dp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            android:background="#ffffff"/>

        <TextView
            android:text="Sign Up"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#ffffff"/>
    </LinearLayout>


        <LinearLayout android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/signup_name"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:hint="Name"
                android:textSize="18dp"
                android:singleLine="true"
                android:textColorHint="#9E9E9E"
                android:textColor="@android:color/white"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/signup_email"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="18dp"
                android:textColorHint="#9E9E9E"
                android:textColor="@android:color/white"
                android:padding="10dp"
                />

            <!--android:background="@drawable/black_border"-->
            <EditText
                android:id="@+id/login_password"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@drawable/white_border"
                android:textSize="18dp"
                android:inputType="textPassword"
                android:textColorHint="#9E9E9E"
                android:textColor="@android:color/white"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/signup_ph_no"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_border"
                android:hint="Contact Number"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="18dp"
                android:textColorHint="#9E9E9E"
                android:textColor="@android:color/white"
                android:padding="10dp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="25dp"
                android:textColor="#9E9E9E"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/signup_male"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/male_avatar_deselected"/>

                <ImageView
                    android:id="@+id/signup_female"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="100dp"
                    android:src="@drawable/female_avataar_deselected"/>

            </LinearLayout>


            <Button
                android:id="@+id/Signup_signup"
                android:layout_margin="15dp"
                android:text="Signup"
                android:textAllCaps="false"
                android:background="@color/colorPrimaryDark"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>
</ScrollView>